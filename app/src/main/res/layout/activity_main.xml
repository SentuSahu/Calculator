<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"

    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculator"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="60dp"
        android:hint="Result"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn2"
            style="@style/Widget.AppCompat.Button.Colored"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/add"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#FF5722"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn5"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn6"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/sub"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#FF5722"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn8"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="8"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn9"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/mul"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#FF5722"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="*"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/dot"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#673AB7"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/equal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#33DF0D"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="="
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/div"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:height="63dp"
            android:background="#FF5722"
            android:fontFamily="@font/work_sans_extrabold"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="/"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnclear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:text="clear" />


    </LinearLayout>


</LinearLayout>